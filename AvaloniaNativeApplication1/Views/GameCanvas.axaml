<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:AvaloniaNativeApplication1.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AvaloniaNativeApplication1.Views.GameCanvas"
        Title="SmallBossGames': The Snake">
 
  
  <DockPanel>
    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Background="AliceBlue">
      <TextBlock Padding="12" >Счёт: </TextBlock>
      <TextBlock Padding="12" Text="{Binding SnakeLength, Mode=OneWay}"/>
    </StackPanel>
    <Canvas 
      x:Name="GrassField"
      Background="LightGreen"
      
      />
  </DockPanel>

</Window>
